<div id="dashboard-container" class="layout-items">
  <h2>My Questions</h2>
</div>

<div class="pure-g">
  <div class="pure-u-6-24 pure-u-md-6-24 pure-u-lg-6-24 pure-u-xl-6-24"></div>
  <div class="pure-u-12-24 pure-u-md-10-24 pure-u-lg-10-24 pure-u-xl-10-24">
   {{!-- this is grid styling just for each question template in the feed  --}}
   {{#each questions}}
    <div class="pure-g feed-question-item question-spacing">
      <div class="pure-u-3-4 pure-u-md-3-4 pure-u-lg-3-4 pure-u-xl-3-4 left-padding">
        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1 pure-u-lg-1 pure-u-xl-1 left-items">
            <h3>Industry: {{this.industry}}</h3>
          </div>
        </div>
        <div class="pure-g layout-items">
          <div class="pure-u-1 pure-u-md-1 pure-u-lg-1 pure-u-xl-1 left-items">
            <a href="/question/{{this._id}}"><h4>{{this.question}}</h4></a>
          </div>
        </div>
      </div>
      <div class="pure-u-1-4 pure-u-md-1-4 pure-u-lg-1-4 pure-u-xl-1-4 border-left"> 
        <div class="pure-g left-padding">
          <div class="pure-u-1 pure-u-md-1 pure-u-lg-1 pure-u-xl-1 left-items">
            <h5>Status: {{this.status}}</h5>
          </div>
        </div>
        <div class="pure-g">
          <div class="spacing"></div>
        </div>
        <div class="pure-g layout-items left-padding">
          <div class="pure-u-5-8 pure-u-md-5-8 pure-u-lg-5-8 pure-u-xl-5-8 left-items ">
           <h5>Answers: {{this.answers}}</h5>
          </div>
          <div class="pure-u-3-8 pure-u-md-3-8 pure-u-lg-3-8 pure-u-xl-3-8 left-items ">
           <h5>Likes: {{this.likes}}</h5>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="pure-u-6-24 pure-u-md-6-24 pure-u-lg-6-24 pure-u-xl-6-24"></div>
</div>
